<%= link_to 'Back to Employees', employees_path %><br>

<h1>Sales (Trailing 15 months)</h1>

<table>
  <thead>
    <tr>
      <th><bold>Sale Date</bold></th>
      <th><bold>Sale Amount</bold></th>
      <th><bold>Invoice Number</bold></th>
      <th><bold>Units Sold</bold></th>
      <th><bold>Price Per Unit</bold></th>
    </tr>
  </thead>

  <tbody>
    <% @trailing_sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= sale.sale_amount.round(2) %></td>
        <td><%= sale.invoice_no %></td>
        <td><%= sale.units_sold %></td>
        <td><%= (sale.sale_amount / sale.units_sold).round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
